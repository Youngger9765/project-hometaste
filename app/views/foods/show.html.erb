<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('.ui.progress').progress();

    $('.popup_button').popup({
      popup: $('.custom.popup'),
      position: 'top right',
      hoverable: true
    })

    $(document).on('click','h3 .vertical_align.gray',function(){
      var span = $('h3 .vertical_align')
      span.toggleClass('gray')
      span.closest('.basic_bg').find('p').toggleClass('hidden')
    })
  })

  $(document).on('click','.fa-twitter',function(e){
    e.preventDefault()
    var id = $(this).parents('.card').data('id')
    var url = 'https://twitter.com/intent/tweet?text=Delicious food&url='+
      location.protocol+'//'+location.hostname + ':3000/food/' + id+'&hashtags=food&via=HomeTeste';
    var win = window.open(url, '_blank');
    win.focus();
  })

  $('#shareBtn').click(function(){
    FB.ui({
      method: 'share',
      display: 'popup',
      href: '<%= request.original_url %>',
    }, function(response){});
  })
</script>


