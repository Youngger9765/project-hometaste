  back_top_minus_hight = 1020;
  $(document).ready(function(){
    $('.ui.progress').progress();
    $('.select_tabs .basic_bg_bottom').click(function(){
      $('.basic_bg_bottom').toggleClass('active')
    })
  })
</script>
