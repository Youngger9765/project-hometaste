<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div id="custom-search-input">
          <div class="input-group col-md-12">
            <%= form_for @restaurant_search, url: admin_main_index_path, :method => :get do |f| %>
              <%= f.label :name,"Restaurant Name" %>
              <%= f.search_field :name %>

              <%= f.submit "Search"%>
            <% end %>
          </div>
          <div class="input-group col-md-12">
            <%= form_for @user_search, url: admin_main_index_path, :method => :get do |f| %>
              <%= f.label :foodie_id,"foodie_id"  %>
              <%= f.search_field :foodie_id %>

              <%= f.submit "Search"%>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <h1>Order List</h1>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Restaurant Name</th>
              <th>User foodie_id</th>
              <th>Total Acount</th>
              <th><%= sort_link(@q, :created_at, 'created at') %></th>
              <th>status</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order|%>
              <tr>
                <td><%= order.id%></td>
                <td><%= order.restaurant.name%></td>
                <td><%= order.user.foodie_id%></td>
                <td><%= order.amount%></td>
                <td><%= order.created_at%></td>
                <td><%= order.order_status%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="center" style="text-align: center; font-size: 20px;">
    <%= paginate @orders %>
  </div>
</div>
