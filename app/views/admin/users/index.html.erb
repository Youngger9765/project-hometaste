<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div id="custom-search-input">
          <div class="input-group col-md-12">
            <input type="text" class="form-control input-lg" placeholder="Search" />
            <span class="input-group-btn">
              <button class="btn btn-info btn-lg" type="button">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <h1>Users Admin</h1>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Email</th>
              <th>Name</th>
              <th>Created_at</th>
              <th>Orders</th>
              <th>Total Acount</th>
              <th>is_admin?</th>
              <th>Ban it!</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u|%>
              <tr data-toggle="collapse" data-target="#data<%=u.id%>" class="accordion-toggle">
                  <td>
                    <%= link_to u.id, admin_user_path(u) %>
                  </td>
                  <td><%= link_to u.email, admin_user_path(u) %></td>
                  <td><%= link_to u.user_name, admin_user_path(u)  %></td>
                  <td><%= u.created_at %></td>
                  <td>
                    <div class="btn btn-success">
                      click to check
                    </div>
                  </td>
                  <!-- TODO: SUM total user's order acount -->
                  <th>$100000</th>

                  <!-- TODO: click to check admin -->
                  <td><%= u.is_admin %></td>
                  
                  <td style="text-align:center;">
                    <% if u.is_ban %>
                      <%= link_to('Rescue', admin_user_path(u,:is_ban => 0),:class => "btn-sm btn-default", :method => "PATCH")%>
                    <% else%>
                      <%= link_to('Ban', admin_user_path(u,:is_ban => 1),:class => "btn-sm btn-danger", :method => "PATCH")%>
                    <% end %>
                  </td>
                  <td style="text-align:center;">
                    <% if u.is_live %>
                      <%= link_to('Delete', admin_user_path(u),:class => "btn-sm btn-danger", :method => "DELETE", :data => {:confirm => "ARE YOU SURE?" } )%> 
                    <% else%>
                      <%= link_to('Rescue', admin_user_path(u,:rescue => 1),:class => "btn-sm btn-default", :method => "DELETE")%> 
                    <% end %>
                  </td>
              </tr>
              <tr >
                <td colspan="6" class="hiddenRow">
                  <div class="accordian-body collapse" id="data<%=u.id%>">
                    <div class="container-fluid">
                      <div class="row">
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                              <th>Order Date</th>
                              <th>Order ID</th>
                              <th>Content</th>
                              <th>Type</th>
                              <th>Place</th>
                              <th>Total Amount</th>
                              <th>Order Status</th>
                            </tr>
                          </thead>
                          <!-- TODO: Orders.each -->
                          <tbody>
                            <tr data-toggle="collapse" data-target="#data1" class="accordion-toggle">
                              <td>2016/12/17</td>
                              <td>#001</td>
                              <td>Hambueger/Steak</td>
                              <td>delivery</td>
                              <td>white house</td>
                              <td>$3000</td>
                              <td>pending</td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>