<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div id="custom-search-input">
          <div class="input-group col-md-12">
            <input type="text" class="form-control input-lg" placeholder="Search" />
            <span class="input-group-btn">
              <button class="btn btn-info btn-lg" type="button">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <h1>Restaurants List</h1>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Restaurant ID</th>
              <th>Restaurant Name</th>
              <th>Created_on</th>
              <th>Approved</th>
              <th>Boss ID</th>
              <th>Boss Name</th>
              <th>Boss Email</th>
              <th>Orders Count</th>
              <th>Orders View</th>
              <th>Total Acount</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @restaurants.each do |r|%>
              <tr data-toggle="collapse" data-target="#data<%=r.id%>" class="accordion-toggle">
                  <td>
                    <%= link_to r.id, admin_restaurant_path(r)%>
                  </td>
                  <td>
                    <%= link_to r.name, admin_restaurant_path(r)%>
                  </td>
                  <td><%=r.created_at%></td>
                  <td style="text-align:center;">
                    <% if r.is_approved%>
                      <div style="color:white; background-color: green; border-radius: 5px; "><%= r.is_approved %></div>
                    <% else %>
                      <div ><%= r.is_approved %></div>
                    <% end %>
                  </td>
                  <td><%=r.user.id%></td>
                  <td><%=r.user.name%></td>
                  <td><%=r.user.email%></td>
                  <td>6</td>
                  <td>
                    <div class="btn btn-success">
                      check
                    </div>
                  </td>
                  <td>$9999</td>
                  <td style="text-align:center;">
                    <% if r.is_live%>
                      <div></div>
                    <% else %>
                      <div style="color:white; background-color: red; border-radius: 5px; ">Delete</div>
                    <% end %>
                  </td>
              </tr>
              <tr >
                <td colspan="13" class="hiddenRow">
                  <div class="accordian-body collapse" id="data<%=r.id%>">
                    <div class="container-fluid">
                      <div class="row">
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                              <th>Order ID</th>
                              <th>Scheduled Datetime</th>
                              <th>Customer ID</th>
                              <th>Customer Name</th>
                              <th>Customer Email</th>
                              <th>Content</th>
                              <th>Shipping method</th>
                              <th>Shipping place</th>
                              <th>Total Amount</th>
                              <th>payment method</th>
                              <th>payment status</th>
                              <th>shipping status</th>
                              <th>order status</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% r.orders.each do |order|%>
                              <tr data-toggle="collapse" data-target="#data1" class="accordion-toggle">
                                <td><%=order.id%></td>
                                <td><%=order.scheduled_time%></td>
                                <td><%=order.user.id%></td>
                                <td><%=order.customer_name%></td>
                                <td><%=order.user.email%></td>
                                <td>
                                  <% order.foods.each do |food|%>
                                      <%= food.name%>
                                      *
                                      <%= order.order_food_ships.find_by(:food_id => food.id).quantity%>
                                      ($<%=order.order_food_ships.find_by(:food_id => food.id).amount%>)
                                  <% end %>

                                </td>
                                <td><%=order.shipping_method%></td>
                                <td><%=order.shipping_place%></td>
                                <td><%=order.amount%></td>
                                <td><%=order.payment_method%></td>
                                <td><%=order.payment_status%></td>
                                <td><%=order.shipping_status%></td>
                                <td><%=order.order_status%></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>