<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12 mt10 flex_vertical_center">
        <div class="dib border_sub_radius border_black background_img_setting mla_xs mln_sm" style="background-image: url(<%= image_path order.restaurant.main_photo %>); width: 40px; height: 40px;"></div>
        <h3 class="bold dib ml10 mra_xs mra_sm"><%= order.restaurant.name %></h3>
      </div>

      <% 3.times do %>
          <% order.order_food_ships.each do |ship| %>
              <div class="col-xs-12 mt30">
                <%= render 'chefs/sales_five_page/product_list', :ship => ship %>
              </div>
          <% end %>
      <% end %>

    </div>
  </div>

  <div class="col-xs-12">
    <div class="row">

      <div class="col-xs-12 df mt20">
        <i class="fa fa-map-marker fa-2x red pr15 tac" style="width: 50px;"></i>
        <span style="font-size: 16px;"><%= order.shipping_place %></span>
      </div>

      <div class="col-xs-12 df mt15">
        <i class="fa fa-clock-o red fa-2x pr15 tac" style="width: 50px;"></i>
        <% if order.pick_up_time.present?%>
            <span style="font-size: 16px;"><%= order.pick_up_time.localtime.strftime('%Y/%m/%d %H:%M') %></span>
        <% end %>
      </div>

      <div class="col-xs-12 df mt15">
        <i class="fa fa-phone red fa-2x pr15 tac" aria-hidden="true" style="width: 50px;"></i>
        <span style="font-size: 16px;">091231232321</span>
      </div>

      <div class="col-sm-6 col-xs-12 df mt15">
        <i class="fa fa-envelope red fa-2x pr15 tac" aria-hidden="true" style="width: 50px;"></i>
        <span style="font-size: 16px;">nycfoodlover@somemail.com</span>
      </div>

      <div class="col-sm-6 col-xs-12">
        <h3 class="bold tac tar_sm mb0_sm mt30 mt20_sm">Total Payment : $<%= order.amount %></h3>
      </div>

    </div>
  </div>
</div>