<div class="container chef-container center" >
	<div class="row col-md-offset-1">
		<h3>
			<%=link_to "HOME", root_path%><span> > <%=params[:action]%></span>
		</h3>
	</div>
	<div class="row">
		<div class="row container chef-sub-container center">
			<div class="col-md-12" id="chef-show-bg-img" style="background-image: url(<%=asset_path(@chef.restaurant.main_photo.url)%>)">

				<div class="col-md-4">
					<% if @chef.user.user_photo && @chef.user.user_photo.photo.exists? %>
						<%= image_tag(@chef.user.user_photo.photo(:thumb))%>
					<%end%>
				</div>
				<div class="col-md-4" id="restaurant_name"><%= @chef.restaurant.name%></div>
				<% if current_user == @user%>
					<div class="btn btn-default col-md-2 right" id="chef-edit-btn">
						<i class="fa fa-pencil" aria-hidden="true"> <%= link_to "Edit Profile", edit_chef_path(@chef) %></i>
					</div>
				<%end%>
				<% if current_user.is_admin %>
					<div class="btn btn-success col-md-2 right" id="chef-review-btn">
						<i class="fa fa-eye" aria-hidden="true"> <%= link_to "Review Chef", review_chef_path(@chef) %></i>
					</div>
				<%end%>
			</div>
			<div class="col-md-12">
				<h3>About</h3>
				<p>
					<%= @chef.restaurant.description%>
				</p>
			</div>

	<div class="clearfix"></div>

			<div class="row">
				<div class="col-md-12">
					<%= link_to 'add dish',new_chef_food_path(@chef.id),:class=>"btn btn-primary"%>
					<%= link_to 'add bigbun',"",:class=>"btn btn-warning"%>
					<%= link_to 'set Menu',menu_chef_path(@chef.id),:class=>"btn btn-default"%>
				</div>
			</div>

	<div class="clearfix"></div>

			<div class="row" id="chef-menu-set-row">
				<div class="col-md-offset-1 col-md-2 chef-menu-set">
					<div class="col-md-12">
						<i class="fa fa-file-text" aria-hidden="true"></i>
					</div>
					<div class="col-md-12">
						Sales
					</div>
				</div>
				<div class="col-md-2 chef-menu-set">
					<div class="col-md-12">
						<i class="fa fa-money" aria-hidden="true"></i>
					</div>
					<div class="col-md-12">
						Income
					</div>
				</div>
				<div class="col-md-2 chef-menu-set">
					<div class="col-md-12">
						<i class="fa fa-star-o" aria-hidden="true"></i>
					</div>
					<div class="col-md-12">
						Rating
					</div>
				</div>
				<div class="col-md-2 chef-menu-set">
					<div class="col-md-12">
						<i class="fa fa-weixin" aria-hidden="true"></i>
					</div>
					<div class="col-md-12">
						Message
					</div>
				</div>
				<div class="col-md-2 chef-menu-set">
					<div class="col-md-12">
						<i class="fa fa-clock-o" aria-hidden="true"></i>
					</div>
					<div class="col-md-12">
						Business
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





