<%= form_for setup_chef(@chef), :url => chef_path(@chef), :method => "patch" do |f| %>

    <%= render 'kitchen_photo',f:f ,pen_click:'pen_click' %>

    <div class="container">
      <section class="row">
        <div class="col-xs-12 basic_bg_top">
          <div class="row" name="kitchen_banner">
            <div class="col-xs-12 df_sm mb15 tac tal_sm">
              <%= render 'chef_photo' ,f:f ,pen_click:'pen_click' %>
              <h1 class="bold m0 ml20_sm ml40_md ml60_lg tal_sm"><%= @chef.restaurant.name%></h1>
            </div>
            <%= render 'chef_banner' %>
          </div>
        </div>
      </section>
    </div>
<% end %>

<div class="container">
  <section class="row">
    <section class="col-xs-12 basic_bg prl15_sm prl30_md">
      <div class="row">

        <div class="col-xs-12 two_btn prl35 mb25 mb0_sm">
          <div class="message_search_wrap">
            <input type="text" class="border_black fluid not_focus_outline pr20 pl70" style="font-size: 18px; border-radius: 30px; height: 50px;">
          </div>
        </div>

        <div class="col-xs-12 prl15_sm" id="my_purchase_content">
          <div class="black_border_block mt25_sm mrl5_sm mrl25_md pb15">

            <div class="row df_sm">
              <div class="col-xs-8 col-xs-offset-2 col-sm-3 col-sm-offset-0 col-md-2">
                <div class="background_img_setting border_main_radius mt15 mtn_sm" style="background-image: url(<%= image_path 'tmp/product.png' %>); padding-top: 100%;"></div>
              </div>
              <div class="col-xs-12 col-sm-9 col-md-10 vertical_space_around tac tan_sm">
                <h3 class="bold mt30 mtn_sm">Mr. Chanâ€™s Kitchen</h3>
                <div style="font-size: 18px;" class="mt10">Where is my duck?</div>
                <div style="font-size: 16px;" class="mtb20 mtb10_sm flex_space_between flex_vertical_center flex_wrap">
                  <span style="color: #9B9B9B;" class="db mrla_xs ml0_sm">2016/12/11</span>
                  <div class="clearfix visible-xs" style="flex-basis: 100%;"></div>
                  <button class="my_btn ml100_md ml50_sm mrla_xs mrn_sm" name="message_button">Message</button>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>
  </section>
</div>


<div class="message_modal">
  <div class="message_top white">
    <h3>Conversations</h3>
    <p>with Mr.Chan's Kitchen</p>
  </div>
  <div class="message_body col-xs-12">
    <% 10.times do %>
        <div class="row message_room ptb15 prl5">
          <div class="col-xs-3 prl10">
            <div class="background_img_setting border_main_radius mtn_sm" style="background-image: url(<%= image_path 'tmp/product.png' %>); padding-top: 100%;"></div>
          </div>
          <div class="col-xs-9">
            <div class="align_two_side mb10">
              <h4>Mr.chan</h4>
              <span class="gray">1 W ago</span>
            </div>
            <div class="message_content">
              <%= 'ewdwdwedwedwedwedwedwedwdwdew'.truncate(20,omission:'...') %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="message_bottom">
    <button class="my_black_btn">
      <i class="fa fa-commenting-o" aria-hidden="true"></i> New Conversation
    </button>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('[name="message_button"]').click(function(){
      $('.message_modal').show()
    })
    $(document).click(function(e){
      var target = e.target;
      if ( !$(target).is('[name="message_button"]') || $(target).is('.message_modal') && $(target).parents().is('.message_modal')) {
        $('.message_modal').hide();
      }
    })


  })
</script>

