<div class="col-xs-12 banner">
  <div class="row">
    <div class="title">
      <h1>HUNGRY?</h1>
      <h3>Don't feel like cooking?</h3>
      <h3>We ot you coverd.</h3>
    </div>
    <div class="search_wrap">
      <div class="ui form">
        <div class="ui fluid search selection dropdown" id="search_text_input">
          <input type="hidden" name="country">
          <i class="dropdown icon"></i>
          <div class="default text">Search</div>
        </div>
        <div class="ui fluid search selection dropdown" id="near_input">
          <input type="hidden" name="country">
          <i class="dropdown icon"></i>
          <div class="default text">Near</div>
          <div class="menu">
            <div class="item" data-value="kitchen_chef"></i>Kitchen or chef</div>
            <div class="item" data-value="most_pop"></i>Most popular</div>
            <div class="item" data-value="new_store"></i>New in store</div>
          </div>
        </div>

        <button id='search_submit' class="ui button" type="submit"><i class="fa fa-search fa-2x" aria-hidden="true"></i></button>
      </div>
    </div>
  </div>
</div>
<div class="col-xs-12 filters ui accordion">
  <div class="row">
    <div class="ui icon button title pull-left" data-tooltip="Filter" data-inverted="">
      <i class="fa fa-filter fa-2x" aria-hidden="true"></i>
    </div>
    <%= render 'filter_content' %>
    <div class="ui icon button pull-right" data-tooltip="Map view" data-inverted="">
      <%= image_tag 'icon/map.png' %>
    </div>
    <div class="ui icon button pull-right hidden" data-tooltip="Product list" data-inverted="">
      <%= image_tag 'icon/list_view.png' %>
    </div>
  </div>
</div>


<div class="location_map hidden">
  <div class="col-xs-12">
    <div class="row">
      <%= render 'map' %>
    </div>
  </div>
</div>
<div class="container">
  <% if @foods %>
      <div class="row foods cards" id="foods">
        <%= render 'foods',foods:@foods %>
      </div>
  <% else %>
      <div class="row restaurants cards" id="restaurants">
        <%= render 'restaurants',restaurants:@restaurants %>
      </div>
      <div class="col-xs-12">
        <div class="row">
          <div class="load_more" id="load_more">
            <button class="ui button my_btn absolute_center">Load more</button>
          </div>
        </div>
      </div>
  <% end %>
</div>

<%= javascript_include_tag 'main' %>

