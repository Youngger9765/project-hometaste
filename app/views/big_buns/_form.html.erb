<!--<%#= f.label :prepare_time, 'prepare_time(H:M)' %>-->
<!--<%#= f.time_select :prepare_time, ampm: false, minute_step: 30 %>-->
<!--</div>-->

<div class="clearfix"></div>

<!-- unit -->
<div class="col-md-4 underline-block">
  <div class="field">
    <%= f.label :unit, 'Qty' %>
    <%= f.number_field :unit, :class=>"number-block" %>
  </div>
</div>

<div class="clearfix"></div>

<div class="col-xs-12">
  <i class="gray_line"></i>
</div>


<!-- photo -->
<div class="col-xs-12">
  <h3>Upload Picture</h3>
</div>

<%= f.fields_for :big_bun_photo do |photo| %>
    <div class="col-md-12 tac_xs tal_sm">
      <div class="img_upload p10 dib background_white border_main_radius">
        <%= photo.label :photo ,style:"background-image:url(#{photo.object.photo if photo.object.photo.file?})" do %>
            <i class="photo_icon"></i>
            <h4>Upload a profile photo</h4>
        <% end %>
        <%= photo.file_field :photo ,class:'hidden'%>
        <%= photo.label :remove_photo, class: 'mt15 square_icon fa fa-trash-o border_red remove_img' do %>
            <%= photo.check_box :remove_photo, class: 'hidden' %>
        <% end %>
      </div>
    </div>
<% end %>

<div class="col-xs-12">
  <i class="gray_line"></i>
</div>
