

<!-- style -->
<div class="col-md-12">
  <div class="field">
  <%= f.label :style, 'Big Bun style:' %>
  <%= f.text_field :style %>
</div>
</div>

<div class="clearfix"></div>

<!-- start_datetime -->
<div class="col-md-6">
  <div class="field date_select_modify">
    <%= f.label :start_datetime, 'Start time:' %>
    <%= f.datetime_select :start_datetime, {value: f.object.try(:'start_datetime.localtime.strftime("%Y-%m-%dT%H:%M:%S")')}, {class:'ui dropdown'} %>
  </div>
</div>


<!-- stop_datetime -->
<div class="col-md-6">
  <div class="field date_select_modify">
    <%= f.label :stop_datetime, 'End time:' %>
    <%= f.datetime_select :stop_datetime, {value: f.object.try(:'stop_datetime.localtime.strftime("%Y-%m-%dT%H:%M:%S")')}, {class:'ui dropdown'} %>
  </div>
</div>

<div class="clearfix"></div>

<!-- stop_datetime -->
